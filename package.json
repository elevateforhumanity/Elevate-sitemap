{
  "name": "elevate-sitemap",
  "version": "1.0.0",
  "description": "Automated sitemap generation for Elevate for Humanity",
  "main": "scripts/generate-sitemaps.js",
  "scripts": {
    "generate": "node scripts/generate-sitemaps.js",
    "validate": "find public -name '*.xml' -exec xmllint --noout {} \\;",
    "dev": "npm run generate && npm run validate",
    "deploy": "npm run generate && npm run validate"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "xml2js": "^0.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elevateforhumanity/Elevate-sitemap.git"
  },
  "keywords": [
    "sitemap",
    "seo",
    "automation",
    "elevate-for-humanity"
  ],
  "author": "Elevate for Humanity",
  "license": "MIT"
}